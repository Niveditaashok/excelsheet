package PageFactory;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

public class RegistrationPF {
	
	WebDriver driver;
	//Getstarted btton
	@FindBy(xpath="//button [@class=\"btn\"]")
	WebElement getstrtbtn;
	
	//register click
	@FindBy(xpath="//a[contains(@href, '/register')]")
	WebElement regst_btn;
	
	
	//register button
	@FindBy(xpath="//input[@type='submit']")
	WebElement rest_click;
	
	
	//username box
	@FindBy(xpath="//input[@type='text']")
	WebElement user_send;
	
	
	public RegistrationPF(WebDriver driver) {
		
		this.driver=driver;
		PageFactory.initElements(driver,this);
		
		
	}


	public void getstrtbtn() throws InterruptedException {
		// TODO Auto-generated method stub
		Thread.sleep(2000);
		
		getstrtbtn.click();
		
	}
	
public void regst_btn() throws InterruptedException {
	Thread.sleep(2000);
	
	regst_btn.click();
}
	
	
	public void rest_click() {
		rest_click.click();
		
		
		
	}
	
	
	
	
}

